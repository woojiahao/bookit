<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/background"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0sp"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="@dimen/small_padding">

		<TextView
			style="@style/Logo"
			android:layout_marginBottom="@dimen/large_padding"/>

		<team.android.projects.com.bookit.ClearableEditText
			android:id="@+id/loginUsernameField"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/small_padding"
			app:hint="@string/username_email"
			app:inputType="text"
			app:sideIcon="@drawable/ic_person_black_24dp"/>

		<team.android.projects.com.bookit.ClearableEditText
			android:id="@+id/loginPasswordField"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/large_padding"
			app:hint="@string/password"
			app:inputType="password"
			app:sideIcon="@drawable/ic_lock_black_24dp"/>

		<Button
			android:id="@+id/signInBtn"
			style="@style/CustomRedButton"
			android:layout_marginBottom="@dimen/small_padding"
			android:text="@string/sign_in"/>

		<TextView
			android:id="@+id/forgotPasswordTxt"
			style="@style/RegularText"
			android:text="@string/forgot_password_get_help"
			android:textColor="@color/colorAccent"/>

	</LinearLayout>

	<Button
		android:id="@+id/switchSignUpBtn"
		style="@style/FullWidthButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/sign_in_full_width"/>

</LinearLayout>