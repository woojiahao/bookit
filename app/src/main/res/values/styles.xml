<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="Logo">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">48sp</item>
		<item name="android:fontFamily">@font/josefin_sans_bold</item>
		<item name="android:text">@string/logo</item>
		<item name="android:textColor">@color/primaryTextColor</item>
	</style>

	<style name="CustomTextField">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">@font/karla_regular</item>
		<item name="android:textSize">24sp</item>
		<item name="android:padding">@dimen/smallest_padding</item>
		<item name="android:background">@android:color/white</item>
		<item name=""
	</style>

</resources>
